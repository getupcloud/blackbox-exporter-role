- job_name: 'blackbox'
  scrape_interval: 15s
  metrics_path: /probe
  params:
    module: [http_2xx]
  static_configs:
    - targets:
{% for endpoint in endpoints %}
      - {{ endpoint }}
{% endfor %}

  relabel_configs:
    - source_labels: [__address__]
      target_label: __param_target
    - source_labels: [__param_target]
      target_label: instance
    - target_label: __address__
      replacement: {{ blackbox_service }}.{{ blackbox_k8s_namespace }}:9115
